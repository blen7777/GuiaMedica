<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="3dp"
    android:id="@+id/card_view_categories"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    card_view:contentPaddingBottom="4dp"
    card_view:layout_optimizationLevel="chains"
    card_view:contentPaddingLeft="4dp"
    card_view:contentPaddingRight="4dp"
    card_view:contentPaddingTop="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="4dp"
        android:gravity="right">


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/lekes"
            android:foregroundGravity="center|top"
            android:layout_gravity="center|top"
            android:id="@+id/favorito"
            app:civ_border_width="4dp"
            android:elevation="22dp"
            android:onClick="addFavorito"
            app:civ_border_color="#11ffffff"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="4dp"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:src="@mipmap/profile"
                    android:foregroundGravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/imgfavorito"
                    app:civ_border_width="4dp"
                    app:civ_border_overlay="true"
                    android:elevation="2dp"
                    app:civ_border_color="#11ffffff"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginLeft="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/idFavorito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/NameFavorito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:text="Jose Ruben Lopez Menjivar"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/especialidadFavorito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medico General"
                    android:typeface="sans"
                    android:textColor="@color/material_light_hint_text"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>
